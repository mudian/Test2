}
//---------------------------------------------------------------------------


void __fastcall TForm2::btnConnectClick(TObject *Sender)
{
	if(ComPort1->Connected == 0 )
	{
		try{
		btnConnect->Down = 1;
		btnConnect->Caption ="Connect";
//		ComPort1->Port = "COM5";

		ComPort1->Open();

		}catch(...){
			Memo1->Lines->Add("?");
		}
	}
	else
	{                        
		btnConnect->Down = 0;
		btnConnect->Caption ="Disconnect";
		ComPort1->Close();
	}


}
